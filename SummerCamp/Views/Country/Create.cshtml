@using SummerCamp.DataModels.Models;
@model Country

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="~/css/create_style.css" asp-append-version="true" />
</head>

<div class="wrapper">
    <div class="country-form">
        <h1 class="text">Create country</h1>
        <hr />
        <form asp-action="Create" asp-controller="Country" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name" class="text">Country name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="text">Country flag</label>
                <input type="file" class="form-control-file" name="photo">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="button" />
            </div>

            <br />
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
