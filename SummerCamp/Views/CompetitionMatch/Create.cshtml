@using SummerCamp.DataModels.Models;
@model CompetitionMatchViewModel

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="~/css/create_match.css" asp-append-version="true" />
</head>


<div class="base-container">
    <div class="wrapper">
        <h1 class="text">Create match</h1>
        <hr />
        <form asp-action="Create" asp-controller="CompetitionMatch" method="post" enctype="multipart/form-data">
            @Html.HiddenFor(model => model.CompetitionId)
            
            <span class="text-danger">@Html.ValidationMessage("Error")</span>
            <div class="form-group">
                <label asp-for="HomeTeam.Name" class="control-label"></label>
                @Html.DropDownList("HomeTeamId", (IEnumerable<SelectListItem>) ViewData["HomeTeams"], "Select home team", new { @class = "form-control" })
                <span asp-validation-for="HomeTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeamGoals" class="control-label"></label>
                <input asp-for="HomeTeamGoals" class="form-control" />
                <span asp-validation-for="HomeTeamGoals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeam.Name" class="control-label"></label>
                @Html.DropDownList("AwayTeamId", (IEnumerable<SelectListItem>) ViewData["AwayTeams"], "Select away team", new { @class = "form-control" })
                <span asp-validation-for="AwayTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamGoals" class="control-label"></label>
                <input asp-for="AwayTeamGoals" class="form-control" />
                <span asp-validation-for="AwayTeamGoals" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="button-1" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
